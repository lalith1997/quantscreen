# QuantScreen Backend Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/quantscreen

# =============================================================================
# SECURITY
# =============================================================================
# Generate a secure key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-to-a-secure-random-string-min-32-chars

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================
# Financial Modeling Prep (required for fundamental data)
# Get your key at: https://financialmodelingprep.com/developer
FMP_API_KEY=your_fmp_api_key_here

# Alpha Vantage (backup data source)
# Get your key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Polygon.io (optional, for real-time data in Phase 2+)
# Get your key at: https://polygon.io/
POLYGON_API_KEY=

# =============================================================================
# OPTIONAL SERVICES
# =============================================================================
# Redis (for caching, optional in Phase 1)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# APPLICATION
# =============================================================================
DEBUG=true
APP_NAME=QuantScreen
APP_VERSION=1.0.0
